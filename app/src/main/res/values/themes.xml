<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RandomlyAskMe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="backgroundColor">@color/grey_700</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/grey_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue_darker</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_600</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="smallLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/grey_500</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="Theme.RandomlyAskMe.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RandomlyAskMe.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.RandomlyAskMe.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>